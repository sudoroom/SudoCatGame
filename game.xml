<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ws>
    <settings>
         <stage width="1200px" height="520px" create="yes" center="yes" resize="yes" />
        <triggers>
            <trigger name="next_by_right" event="keyup" key="RIGHT_ARROW" special="next" />
        </triggers>
    </settings>
    <assets>
        <imagepack name="sudocat" x="410px" y="150px" z="20">
            <image src="assets/images/characters/sudocat/sudocat-eyesclosed-normal.png" name="normal-eyesclosed" />
         <!-- 
            <image src="assets/images/characters/sudocat/sudocat-normal.png" name="normal" />
            <image src="assets/images/characters/sudocat/sudocat-normal-tiltright.png" name="normal-tilt-right" />
        -->
        </imagepack>
        
        <imagepack name="background">
            <image src="assets/images/background/bg_sudoKitchen.png" name="bg_sudoKitchen" />
             <!-- 
            <image src="assets/images/background/bg_sudoMate.png" name="bg_sudoMate" />
            <image src="assets/images/background/bg_sewing.png" name="bg_sewing" />
        -->
        </imagepack>

        <character name="sc" textbox="tb_main">
            <displayname>SudoCat</displayname>
        </character>      

        <character name="f" textbox="tb_main">
            <displayname>Fisher</displayname>
        </character>
        
        <character name="t" textbox="tb_main">
            <displayname>Tourist</displayname>
        </character>
        
        <character name="n" textbox="tb_main"></character>
        
        <textbox name="tb_main" width="890px" height="100px" x="5px" y="355px" namebox="yes" speed="50">
            <nameTemplate>{name}</nameTemplate>
        </textbox>
        
    </assets>
    <scenes>
        
        <scene id="start">
            
            <set asset="background" image="bg_sewing" />
            <show asset="background" />
            
            <show asset="tb_main" />
            
            <set asset = "SudoCat" image="normal" duration="0" />
            <show asset= "SudoCat" />

            <line s="sc">
                Ah! SudoRoom... where to begin? 
            </line>

            <restart />
        </scene>  
    </scenes>
</ws>